        <activity
            android:name=".modern.ModernKeypadInputActivity"
            android:exported="true"
            android:label="xDrip+ Modern"
            android:theme="@style/AppTheme">
            <!-- Removed launcher intent filter to prevent duplicate app icons -->
        </activity>
        
        <!-- Watch Face Launcher Activity - No launcher intent filter to prevent app icon -->
        <activity
            android:name=".WatchFaceLauncherActivity"
            android:exported="true"
            android:label="xDrip+ Watch Faces"
            android:theme="@android:style/Theme.DeviceDefault">
            <!-- No intent filter to prevent app icon in launcher -->
        </activity>

