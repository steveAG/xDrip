<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="xDrip+ Watch Faces"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="16dp" />

        <TextView
            android:id="@+id/instructions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="To add an xDrip+ watch face:\n\n1. Long press on your current watch face\n2. Tap 'Add watch face'\n3. Scroll down to find xDrip watch faces\n4. Select one of the following:\n   - xDrip\n   - xDrip (Large)\n   - xDrip (BigChart)\n   - xDrip (Circle)"
            android:textSize="16sp"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/open_picker_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Open Watch Face Picker" />

    </LinearLayout>
</ScrollView>