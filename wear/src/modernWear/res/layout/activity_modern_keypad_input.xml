<?xml version="1.0" encoding="utf-8"?>
<androidx.wear.widget.BoxInsetLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/keypad_root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_background"
    android:padding="@dimen/box_inset_layout_padding"
    tools:context=".modern.ModernKeypadInputActivity"
    tools:deviceIds="wear">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/inner_frame_layout_padding"
        app:layout_boxedEdges="all">

        <!-- Title -->
        <TextView
            android:id="@+id/keypad_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/enter_value"
            android:textColor="@color/primary_text"
            android:textSize="@dimen/text_size_medium"
            android:textStyle="bold" />

        <!-- Value Display -->
        <TextView
            android:id="@+id/keypad_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="0"
            android:textColor="@color/primary_text"
            android:textSize="@dimen/text_size_xlarge"
            android:textStyle="bold" />

        <!-- Keypad Grid -->
        <GridLayout
            android:id="@+id/keypad_grid"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="8dp"
            android:layout_weight="1"
            android:columnCount="3"
            android:rowCount="4">

            <!-- Row 1: 1, 2, 3 -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_1"
                style="@style/ModernKeypadButton"
                android:text="1" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_2"
                style="@style/ModernKeypadButton"
                android:text="2" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_3"
                style="@style/ModernKeypadButton"
                android:text="3" />

            <!-- Row 2: 4, 5, 6 -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_4"
                style="@style/ModernKeypadButton"
                android:text="4" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_5"
                style="@style/ModernKeypadButton"
                android:text="5" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_6"
                style="@style/ModernKeypadButton"
                android:text="6" />

            <!-- Row 3: 7, 8, 9 -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_7"
                style="@style/ModernKeypadButton"
                android:text="7" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_8"
                style="@style/ModernKeypadButton"
                android:text="8" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_9"
                style="@style/ModernKeypadButton"
                android:text="9" />

            <!-- Row 4: ., 0, DEL -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_decimal"
                style="@style/ModernKeypadButton"
                android:text="." />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_0"
                style="@style/ModernKeypadButton"
                android:text="0" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_delete"
                style="@style/ModernKeypadButton.Special"
                android:text="DEL"
                app:icon="@android:drawable/ic_input_delete"
                app:iconGravity="textStart"
                app:iconPadding="0dp"
                app:iconSize="16dp" />

        </GridLayout>

        <!-- Action Buttons -->
        <LinearLayout
            android:id="@+id/action_buttons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_cancel"
                style="@style/ModernActionButton.Cancel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:layout_weight="1"
                android:text="@string/cancel" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_done"
                style="@style/ModernActionButton.Done"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_weight="1"
                android:text="@string/done" />

        </LinearLayout>

    </LinearLayout>
</androidx.wear.widget.BoxInsetLayout>